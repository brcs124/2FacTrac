{
    "manifest_version": 3,
    "name": "2FacTrac",
    "version": "1.0",
    "description": "Automatically finds verification codes and links from recent Gmail emails to simplify the authentication process.",
    "permissions": [
      "identity",
      "tabs"
    ],
    "host_permissions": [
      "https://www.googleapis.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Show Verification Code",
      "default_popup": "popup.html"
    },
    "oauth2": {
      "client_id": "1031909642935-e9q5o55m5lrtb3mekerupaereu3ghjjn.apps.googleusercontent.com", 
      "scopes": [
        "https://www.googleapis.com/auth/gmail.readonly"
      ]
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }