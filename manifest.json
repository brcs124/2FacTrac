{
    "manifest_version": 3,
    "name": "2FacTrac",
    "version": "1.0",
    "description": "Automatically finds verification codes and links from recent Gmail emails to simplify the authentication process.",
    "permissions": [
      "identity",
      "alarms",
      "tabs"
    ],
    "host_permissions": [
      "https://www.googleapis.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Show Verification Code",
      "default_popup": "popup.html"
    },
    "oauth2": {
      "client_id": "166651681707-e7hsvegiet7enbll5diphdjrv2s0243u.apps.googleusercontent.com", 
      "scopes": [
        "https://www.googleapis.com/auth/gmail.readonly"
      ]
    }
  }